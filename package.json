{
  "name": "yandex-messenger",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "BROWSER='yandex' vite --open",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "start": "tsc && vite build && node server.cjs",
    "lint": "tsc --noEmit && eslint \"./src/**/*.ts\"",
    "test": "mocha --require ts-node/register --require ./mochaSetup.cjs './src/**/*.test.ts'",
    "precommit": "npm run test && npm run lint",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@types/chai": "^4.3.5",
    "@types/jsdom": "^21.1.2",
    "@types/mocha": "^10.0.1",
    "@types/node": "^20.4.2",
    "@types/sinon": "^10.0.16",
    "@types/uuid": "^9.0.2",
    "@typescript-eslint/eslint-plugin": "^6.1.0",
    "@typescript-eslint/parser": "^6.1.0",
    "chai": "^4.3.8",
    "eslint": "^8.45.0",
    "husky": "^8.0.3",
    "jsdom": "^22.1.0",
    "less": "^4.1.3",
    "mocha": "^10.2.0",
    "sinon": "^15.2.0",
    "stylelint": "^15.10.2",
    "stylelint-config-standard": "^34.0.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.2",
    "vite": "^4.3.9"
  },
  "dependencies": {
    "express": "^4.18.2",
    "handlebars": "^4.7.7",
    "uuid": "^9.0.0",
    "vite-plugin-handlebars": "^1.6.0"
  }
}
